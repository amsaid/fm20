<?xml version='1.0' encoding='utf-8'?>

<panel>
	<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true"/>
  <boolean id="should_force_refresh" value="true"/>
	<!-- Main -->
	<container class="bordered_box" appearance="boxes/bordered/standard/paper">
		<layout class="arrange_vertical_attachment" layout="150,-1"/>
		<layout class="stick_to_sides_attachment" alignment="horizontal" apply_to_children="true" inset="0" />
		<!-- Profile Picture -->
		<widget class="picture" id="prop" scale_picture="true" keep_aspect_ratio="true" image_alignment="centre_x,centre_y">
				<record id="object_property">
					<list id="get_properties">
						<!--Facegen data request-->
						<record get_property="fcgn" />
						<!--Fake name request-->
						<record get_property="Pfke" />
						<record get_property="prpc" set_property="valu" />
					</list>
				</record>
			</widget>
		<!--Details-->
			<container class="vertical_adaptive_container" minum_width="400" gap="0" inset="0" offset="0">
			  
	<container class="plain_box" default_height="42" priority="1" appearance="boxes/bordered/standard/paper12" red_replacement="heffem" blue_replacement="heffem3" default_width="350"   image_alignment="centre" >
			<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true" />
			<widget class="person_button" id="pnam" auto_size="" alignment="top" colour="heffem" font="signature"  multiline="false" size="18">
				<record id="object_property">
			<list id="get_properties">
				<record>
					<integer id="get_property" value="titl" />
					<integer id="set_property" value="text" />
				</record>
			</list>
				</record>

			</widget>
		</container>
						  		
          <widget class="picture" file="dividers/standard/horizontal/line" height="1" image_alignment="centre"/>	

	  	  <!--media description row-->
      <container priority="99" default_height="50" >
        <layout class="arrange_vertical_attachment" layout="-1,-1" offset="0" gap="-5" />
        <layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" apply_to_children="true" />
				
	  	
		<!--media description-->
						<widget class="label" id="pcjo" spec="text,small" size="12" colour="heffem2" font="title" alignment="centre_x,centre_y" />
						
				<widget class="player_extra_details_text" id="plex" default_height="20" priority="1" spec="text" font="title" colour="white" alignment="centre_x,centre_y"  size="12"> 
					<record id="object_property">
						<integer id="get_property" value="NPxD" />
					</record>
				</widget>
	 </container>
		
				
							  <container height="3"/>  
	
          <widget class="picture" file="dividers/standard/horizontal/line" height="1" image_alignment="centre"/>	

							  <container height="3"/>  
									
				<!--International Row -->
				<container default_height="75">
					<layout class="arrange_horizontal_attachment" layout="-1,-1,-1,-1" offset="0" />
					<layout class="stick_to_sides_attachment" alignment="vertical" inset="0" apply_to_children="true" />
					<container>
						<layout class="arrange_vertical_attachment" layout="-1,-1,-1" offset="0" />
						<layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" apply_to_children="true" />
						<!--int apps-->
						
						<widget class="international_appearances_label" size="12" style=""  colour="heffem" font="title" id="inta" alignment="centre_x,bottom">
							<integer id="int_apps_label_format" value="1" />
							<!-- 1 is for apps -->
							<record id="object_property">
								<integer id="get_property" value="Pist" />
							</record>
						</widget>
						<!--int goals-->
						<widget class="international_appearances_label" size="10" colour="white" font="title" id="intg" alignment="centre_x,top">
							<integer id="int_apps_label_format" value="2" />
							<!-- 2 is goals -->
							<record id="object_property">
								<integer id="get_property" value="Pist" />
							</record>
						</widget>
					</container>
					<container>
						<layout class="arrange_vertical_attachment" alignment="fill" offset="0" gap="0" />
						<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true" />

              <widget class="object_portrait_picture" id="npiB" image_alignment="centre" scale_picture="true" width="70" height="70" wants_mouse_events="true" embed_in_frame="true">
                <layout class="centre_in_parent_attachment" alignment="all" inset="0" embed_in_frame="true" />
                <record id="object_property" dont_set_hint="true" get_property="PNat" set_property="objt" />
              </widget>

					</container>
					<container>
						<layout class="arrange_vertical_attachment" alignment="fill" offset="0" gap="0" />
						<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true" />
						
              <widget class="object_portrait_picture" id="pclB" image_alignment="centre" scale_picture="true" width="70" height="70" wants_mouse_events="true" embed_in_frame="true">
                <layout class="centre_in_parent_attachment" alignment="all" inset="0" embed_in_frame="true" />
                <record id="object_property" dont_set_hint="true" get_property="Pclb" set_property="objt" />
              </widget>
			  
					</container>
					<container>
						<layout class="arrange_vertical_attachment" layout="-1,-1,-1" offset="0" />
						<layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" apply_to_children="true" />
						<!--youth apps-->
						
						<widget class="international_appearances_label" size="12" style=""   colour="heffem" font="title" iid="youa" alignment="centre_x,bottom">
							<integer id="int_apps_label_format" value="3" />
							<!-- 3 is for youth apps -->
							<record id="object_property">
								<integer id="get_property" value="Pist" />
							</record>
						</widget>
						<!--youth goals-->
						<widget class="international_appearances_label" size="10" colour="white" font="title" id="youg" alignment="centre_x,top">
							<integer id="int_apps_label_format" value="4" />
							<!-- 4 is for youth goals -->
							<record id="object_property">
								<integer id="get_property" value="Pist" />
							</record>
						</widget>
					</container>
					

				</container>
										 
		
          <widget class="picture" file="dividers/standard/horizontal/line" height="1" image_alignment="centre"/>	

										  
										  
						<!--Reputation and Personality row-->
				<container default_height="50" minimum_height="50">
					<layout class="arrange_horizontal_attachment" layout="-1, -1" offset="0" gap="0" />
					<layout class="stick_to_sides_attachment" alignment="vertical" inset="0" apply_to_children="true" />
					<container>  
						<layout class="arrange_vertical_attachment" layout="-4,-4" offset="0" gap="0" />
						<layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" apply_to_children="true" />
						<!--Personality label-->
						
						<widget class="label" alignment="centre_x,bottom" size="10" colour="heffem" font="title">
							<translation id="text" translation_id="247713" type="use" value="Personality" />
						</widget>
						<!--Personality-->
						<widget class="personality_label" id="peRs" size="11" style="" alignment="centre_x,top" >
							<record id="object_property">
								<integer id="get_property" value="PPst" />
							</record>
						</widget>
					</container>
					<container>
						<layout class="arrange_vertical_attachment" layout="-4,-4" offset="0" gap="0" />
						<layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" apply_to_children="true" />
						<!--Reputation label-->
					
						<widget class="label" alignment="centre_x,bottom" size="10" colour="heffem" font="title">
							<translation id="text" translation_id="227963" type="use" value="Reputation" />
						</widget>
						<!--Reputation-->
						<widget class="reputation_label" id="repU" size="11" style="" alignment="centre_x,top" >
							<record id="object_property">
								<integer id="get_property" value="Pcrp" />
							</record>
						</widget>
					</container>
				</container>	
		
	
		
						
          <widget class="picture" file="dividers/standard/horizontal/line" height="1" image_alignment="centre"/>	

				<!--contract row-->
				<container default_height="50" minimum_height="30" priority="3">
					<layout class="arrange_horizontal_attachment" layout="-1, -1, -1" offset="0" gap="0" />
					<layout class="stick_to_sides_attachment" alignment="vertical" inset="0" apply_to_children="true" />
					<container>
						<layout class="arrange_vertical_attachment" layout="-4,-4" offset="0" gap="0" />
						<layout class="stick_to_sides_attachment" alignment="horizontal" apply_to_children="true" inset="0" />
						<!--wage label-->
						
						<widget class="label" id="wglb" size="10" alignment="centre_x,bottom" font="title" colour="heffem">
							<translation id="text" translation_id="242353" type="use" value="Wages" />          
						</widget>
						<!--wage-->
						<container class="wage_label" id="wkwg"  size="11" style="" alignment="centre_x,bottom" format="2" auto_size="vertical">
							<record id="object_property">
              <integer id="get_property" value="Pcww" />
							</record>
						</container>
					</container>
					
					
					<!--swipe-->
			<container priority="1" default_height="50" minimum_height="0">
						<layout class="arrange_vertical_attachment" layout="-4,-4" offset="0" gap="0" />
				<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true" />

					<!-- Age in years -->
					<widget class="dob_label" id="ages" spec="text,large,bold" size="12" colour="heffem" alignment="centre_x, bottom" display_format="2" font="title">
						<layout class="stick_to_sides_attachment" alignment="right" inset="0" />
						<record id="object_property">
							<integer id="get_property" value="Pdob"/>
						</record>
					</widget>
                                        
					<!--date of birth-->
					<widget class="editable_client_object_property_panel" spec="text,large,bold" id="dobc" size="11" colour="white" alignment="centre_x,top" display_format="0" font="text">
						<record id="object_property">
							<integer id="get_property" value="Pdob" />
						</record>
					</widget>

					 

				</container>
						
									
				
					<container>
						<layout class="arrange_vertical_attachment" layout="-4,-4" offset="0" gap="0" />
						<layout class="stick_to_sides_attachment" alignment="horizontal" apply_to_children="true" inset="0" />
						<!--expiry date label-->
						
						<widget class="label" size="10" font="title"  colour="heffem" alignment="centre_x,bottom">
							<translation id="text" translation_id="227784" type="use" value="Expires" />
						</widget>
						<!--expiry date-->
						<widget class="date_cell" id="expd" size="11" style="" alignment="centre_x,bottom" auto_size="vertical">
							<record id="object_property">
								<integer id="get_property" value="Pced" />
							</record>
						</widget>
					</container>
				</container>
				
          <widget class="picture" file="dividers/standard/horizontal/line" height="1" image_alignment="centre"/>	


	<!--physical attributes row-->
				<container default_height="65" minimum_height="30" priority="3">
					<layout class="arrange_horizontal_attachment" layout="-1" offset="0" gap="0" />
					<layout class="stick_to_sides_attachment" alignment="vertical" inset="0" apply_to_children="true" />
					
					<container>
						<layout class="arrange_vertical_attachment" layout="-4,-4,-4" offset="0" gap="0" />
						<layout class="stick_to_sides_attachment" alignment="horizontal" apply_to_children="true" inset="0" />	   
						<!--value label-->
						
						<widget class="label" id="vall" spec="text" size="10" font="title" colour="heffem" alignment="centre_x,centre_y">
      <translation id="text" translation_id="329843" type="use" value="Coaching Qualifications[COMMENT: non-player profile; coaching qualification]" />
						</widget>		
						<!--value-->
		
						
						<widget class="label" id="coaq" size="11" alignment="centre_x,top" auto_size="vertical"/>
					    <widget class="label" id="coco" size="11" alignment="centre_x,top" font="text" colour="white"/>
					</container>
				
				</container>

			</container>
	</container>
</panel>