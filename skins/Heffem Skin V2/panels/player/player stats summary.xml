<panel>
	<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true" />

	<container class="empty_state" id="noma" header_widget="nomT">
		<widget class="text" id="nomT">
			<translation id="text" translation_id="260962" type="use" value="No matches played yet[COMMENT comp player stats panel: no matches: title]" />
		</widget>
	</container>


	<container class="scrolling_box" id="soma">
		<container class="vertical_arrange_container" alignment="top" gap="0" inset="0" offset="0" auto_size="vertical">

			<record id="default_properties" alignment="top" gap="8" inset="0" offset="0" auto_size="vertical" />
			
			<!-- Top Goalcorer-->
			<container class="vertical_arrange_container">
				<container>
					<layout class="centre_in_parent_attachment" alignment="vertical" apply_to_children="true" />
					<layout class="fit_children_attachment" alignment="vertical" offset="0" gap="0" />
					<layout class="arrange_horizontal_attachment" alignment="left,extend" gap="0" offset="0" />

					<container width="80" height="58">
						<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true" />

						<widget class="picture" file="icons/custom/player stats/top goalscorer" image_alignment="left,top" scale_picture="false" />
						<widget class="object_portrait_picture" id="tgsp" image_alignment="right,bottom" scale_picture="true" />
					</container>

					<container>
						<layout class="arrange_vertical_attachment" alignment="top" gap="1" offset="0" />
						<layout class="fit_children_attachment" alignment="vertical,fill" offset="0" gap="1" />
						<layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" apply_to_children="true" />

						<widget class="label" auto_size="vertical" alignment="left,can_scale" colour="heffem"  font="label">
							<translation id="text" translation_id="247695" type="use" value="Top Goalscorer[COMMENT: manager home panel: player stats: top goalscorer label]" />
						</widget>
						<widget class="player_stat_text" id="tgsc" maxv="5" mode="show_name" multiline="true" auto_size="vertical" style="bold">
							<translation id="text" translation_id="233089" type="use" value="-" />
						</widget>
						<widget class="player_stat_text" id="tgs2" mode="show_value,show_as_number" auto_size="vertical" colour="heffem2" size="10">
							<translation id="text" translation_id="233089" type="use" value="-" />
							<list id="format">
								<record value="1">
									<translation id="format" translation_id="385425" type="use" value="1 goal[COMMENT: FR 10661; player overview form; number of goals scored by player; singular]" />
								</record>
								<record default_value="true">
									<translation id="format" translation_id="327328" type="use" value="[%number#1] goals" />
								</record>
							</list>
						</widget>
					</container>
				</container>
				<widget class="horizontal_divider" />
			</container>

			<!-- Highest Average rating-->
			<container class="vertical_arrange_container">

				<container>
					<layout class="centre_in_parent_attachment" alignment="vertical" apply_to_children="true" />
					<layout class="fit_children_attachment" alignment="vertical" offset="0" gap="0" />
					<layout class="arrange_horizontal_attachment" alignment="left,extend" gap="0" offset="0" />

					<container width="80" height="58">
						<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true" />

						<widget class="picture" file="icons/custom/player stats/average rating" image_alignment="left,top" scale_picture="false" />
						<widget class="object_portrait_picture" id="avrp" image_alignment="right,bottom" scale_picture="true" />
					</container>

					<container>
						<layout class="arrange_vertical_attachment" alignment="top" gap="1" offset="0" />
						<layout class="fit_children_attachment" alignment="vertical,fill" offset="0" gap="1" />
						<layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" apply_to_children="true" />

						<widget class="label" auto_size="vertical" alignment="left,can_scale" colour="heffem"   font="label">
							<translation id="text" translation_id="232096" type="use" value="Highest Average Rating" />
						</widget>
						<widget class="player_stat_text" id="avra" maxv="5" mode="show_name" multiline="true" auto_size="vertical" style="bold">
							<translation id="text" translation_id="233089" type="use" value="-" />
						</widget>
						<widget class="player_stat_text" id="avr2" mode="show_value,show_as_fraction" auto_size="vertical" colour="heffem2" size="10">
							<translation id="text" translation_id="233089" type="use" value="-" />
						</widget>
					</container>
				</container>
				<widget class="horizontal_divider" />
			</container>

			<!-- Most Assists-->
			<container class="vertical_arrange_container">

				<container>
					<layout class="centre_in_parent_attachment" alignment="vertical" apply_to_children="true" />
					<layout class="fit_children_attachment" alignment="vertical" offset="0" gap="0" />
					<layout class="arrange_horizontal_attachment" alignment="left,extend" gap="0" offset="0" />

					<container width="80" height="58">
						<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true" />

						<widget class="picture" file="icons/custom/player stats/assists" image_alignment="left,top" scale_picture="false" />
						<widget class="object_portrait_picture" id="moap" image_alignment="right,bottom" scale_picture="true" />
					</container>

					<container>
						<layout class="arrange_vertical_attachment" alignment="top" gap="1" offset="0" />
						<layout class="fit_children_attachment" alignment="vertical,fill" offset="0" gap="1" />
						<layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" apply_to_children="true" />

						<widget class="label" auto_size="vertical" alignment="left,can_scale"  colour="heffem"  font="label">
							<translation id="text" translation_id="336496" type="use" value="Most Assists[COMMENT: title for table showing players who have the most assists]" />
						</widget>
						<widget class="player_stat_text" id="moas" maxv="5" mode="show_name" multiline="true" auto_size="vertical" style="bold">
							<translation id="text" translation_id="233089" type="use" value="-" />
						</widget>
						<widget class="player_stat_text" id="moa2" mode="show_value,show_as_number" auto_size="vertical" colour="heffem2" size="10">
							<translation id="text" translation_id="233089" type="use" value="-" />
							<list id="format">
								<record value="1">
									<translation id="format" translation_id="385424" type="use" value="1 assist[COMMENT: FR 10661; player overview form; number of assists made by player; singular]" />
								</record>
								<record default_value="true">
									<translation id="format" translation_id="384051" type="use" value="[%number#1] assists[COMMENT: FR 10661; player overview form; number of assists made by player; multiple/plural]" />
								</record>
							</list>
						</widget>
					</container>
				</container>
				<widget class="horizontal_divider" />
			</container>

			<!-- Pass completion -->
			<container class="vertical_arrange_container">

				<container>
					<layout class="centre_in_parent_attachment" alignment="vertical" apply_to_children="true" />
					<layout class="fit_children_attachment" alignment="vertical" offset="0" gap="0" />
					<layout class="arrange_horizontal_attachment" alignment="left,extend" gap="0" offset="0" />

					<container width="80" height="58">
						<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true" />

						<widget class="picture" file="icons/custom/player stats/pass completition" image_alignment="left,top" scale_picture="false" />
						<widget class="object_portrait_picture" id="pasp" image_alignment="right,bottom" scale_picture="true" />
					</container>

					<container>
						<layout class="arrange_vertical_attachment" alignment="top" gap="1" offset="0" />
						<layout class="fit_children_attachment" alignment="vertical,fill" offset="0" gap="1" />
						<layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" apply_to_children="true" />

						<widget class="label" auto_size="vertical" alignment="left,can_scale" colour="heffem"   font="label">
							<translation id="text" translation_id="392241" type="use" value="Best Pass Completion[COMMENT: FR 8873; Competition player stats overview; stat description, best pass completion ratio]" />
						</widget>
						<widget class="player_stat_text" id="pass" maxv="5" mode="show_name" multiline="true" auto_size="vertical" style="bold">
							<translation id="text" translation_id="233089" type="use" value="-" />
						</widget>

						<widget class="player_stat_text" id="pas2" mode="show_value,show_as_number" auto_size="vertical" colour="heffem2" size="10">
							<translation id="text" translation_id="233089" type="use" value="-" />
							<translation id="format" translation_id="233144" type="use" value="[%number#1]%" />
						</widget>
					</container>
				</container>
				<widget class="horizontal_divider" />
			</container>

			<!-- Player of the match -->
			<container class="vertical_arrange_container">

				<container>
					<layout class="centre_in_parent_attachment" alignment="vertical" apply_to_children="true" />
					<layout class="fit_children_attachment" alignment="vertical" offset="0" gap="0" />
					<layout class="arrange_horizontal_attachment" alignment="left,extend" gap="0" offset="0" />

					<container width="80" height="58">
						<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true" />

						<widget class="picture" file="icons/custom/player stats/player of match" image_alignment="left,top" scale_picture="false" />
						<widget class="object_portrait_picture" id="momp" image_alignment="right,bottom" scale_picture="true" />
					</container>

					<container>
						<layout class="arrange_vertical_attachment" alignment="top" gap="1" offset="0" />
						<layout class="fit_children_attachment" alignment="vertical,fill" offset="0" gap="1" />
						<layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" apply_to_children="true" />

						<widget class="label" auto_size="vertical" alignment="left,can_scale"  colour="heffem"  font="label">
							<translation id="text" translation_id="336498" type="use" value="Most Man of the Match Awards[COMMENT: title for table showing players who have been man of the match most often]" />
						</widget>
						<widget class="player_stat_text" id="moma" maxv="5" mode="show_name" multiline="true" auto_size="vertical" style="bold">
							<translation id="text" translation_id="233089" type="use" value="-" />
						</widget>
						<widget class="player_stat_text" id="mom2" mode="show_value,show_as_number" auto_size="vertical" colour="heffem2" size="10">
							<translation id="text" translation_id="233089" type="use" value="-" />
							<list id="format">
								<record value="1">
									<translation id="format" translation_id="390343" type="use" value="1 player of the match award[COMMENT: FR 10252; manager home - player stats panel; number of 'man of the match' received by player; singular]" />
								</record>
								<record default_value="true">
									<translation id="format" translation_id="390640" type="use" value="[%number#1] player of the match awards[COMMENT: FR 10252; manager home - player stats panel; number of 'man of the match' received by player; plural]" />
								</record>
							</list>
						</widget>
					</container>
				</container>
				<widget class="horizontal_divider" />
			</container>

			<!-- Yellow cards -->
			<container class="vertical_arrange_container">

				<container>
					<layout class="centre_in_parent_attachment" alignment="vertical" apply_to_children="true" />
					<layout class="fit_children_attachment" alignment="vertical" offset="0" gap="0" />
					<layout class="arrange_horizontal_attachment" alignment="left,extend" gap="0" offset="0" />

					<container width="80" height="58">
						<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true" />

						<widget class="picture" file="icons/custom/player stats/yellow cards" image_alignment="left,top" scale_picture="false" />
						<widget class="object_portrait_picture" id="yecp" image_alignment="right,bottom" scale_picture="true" />
					</container>

					<container>
						<layout class="arrange_vertical_attachment" alignment="top" gap="1" offset="0" />
						<layout class="fit_children_attachment" alignment="vertical,fill" offset="0" gap="1" />
						<layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" apply_to_children="true" />

						<widget class="label" auto_size="vertical" alignment="left,can_scale"  colour="heffem"  font="label">
							<translation id="text" translation_id="336499" type="use" value="Most Yellow Cards[COMMENT: title for table showing players who have the most yellow cards]" />
						</widget>
						<widget class="player_stat_text" id="yeca" maxv="5" mode="show_name" multiline="true" auto_size="vertical" style="bold">
							<translation id="text" translation_id="233089" type="use" value="-" />
						</widget>
						<widget class="player_stat_text" id="yec2" mode="show_value,show_as_number" auto_size="vertical" colour="heffem2" size="10">
							<translation id="text" translation_id="233089" type="use" value="-" />
							<list id="format">
								<record value="1">
									<translation id="format" translation_id="343069" type="use" value="1 yellow card[COMMENT: text showing how many yellow cards a referee has given out]" />
								</record>
								<record default_value="true">
									<translation id="format" translation_id="345784" type="use" value="[%number#1] yellow cards[COMMENT: text showing how many yellow cards a referee has given out]" />
								</record>
							</list>
						</widget>
					</container>
				</container>
				<widget class="horizontal_divider" />
			</container>

			<!-- Red cards-->
			<container class="vertical_arrange_container">
				<container>
					<layout class="centre_in_parent_attachment" alignment="vertical" apply_to_children="true" />
					<layout class="fit_children_attachment" alignment="vertical" offset="0" gap="0" />
					<layout class="arrange_horizontal_attachment" alignment="left,extend" gap="0" offset="0" />

					<container width="80" height="58">
						<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true" />

						<widget class="picture" file="icons/custom/player stats/red cards" image_alignment="left,top" scale_picture="false" />
						<widget class="object_portrait_picture" id="recp" image_alignment="right,bottom" scale_picture="true" />
					</container>

					<container>
						<layout class="arrange_vertical_attachment" alignment="top" gap="1" offset="0" />
						<layout class="fit_children_attachment" alignment="vertical,fill" offset="0" gap="1" />
						<layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" apply_to_children="true" />

						<widget class="label" auto_size="vertical" alignment="left,can_scale" colour="heffem"   font="label">
							<translation id="text" translation_id="232098" type="use" value="Worst Discipline" />
						</widget>
						<widget class="player_stat_text" id="reca" maxv="5" mode="show_name" multiline="true" auto_size="vertical" style="bold">
							<translation id="text" translation_id="233089" type="use" value="-" />
						</widget>
						<widget class="player_stat_text" id="rec2" mode="show_value,show_as_number" auto_size="vertical" colour="heffem2"  size="10">
							<translation id="text" translation_id="233089" type="use" value="-" />
							<list id="format">
								<record value="1">
									<translation id="format" translation_id="343065" type="use" value="1 red card[COMMENT: text showing how many red cards a referee has given out]" />
								</record>
								<record default_value="true">
									<translation id="format" translation_id="345782" type="use" value="[%number#1] red cards[COMMENT: text showing how many red cards a referee has given out]" />
								</record>
							</list>
						</widget>
					</container>
				</container>
			</container>
		</container>
	</container>
</panel>