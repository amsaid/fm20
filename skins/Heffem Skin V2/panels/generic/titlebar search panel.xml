<panel>
	<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true"/>



	<!--search box-->
	<widget class="db_record_search_box" id="srcB" file="widgets/search box titlebar" hidden="true"/>

	<!--standard title bar text-->
	<container id="sttt">
		<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true"/>

		<!-- Button to highlight existance of search box on hover -->
		<widget class="button" appearance="buttons/custom/interface/search/button" />

		<container>
			<layout class="arrange_horizontal_attachment"  layout="-1,30" gap="5" offset="0" />
			<layout class="stick_to_sides_attachment" alignment="vertical" inset="0" apply_to_children="true"/>

			<container>
				<layout class="arrange_horizontal_attachment" alignment="left, extend" gap="10" offset="0" />
				<layout class="stick_to_sides_attachment" alignment="vertical" inset="0" apply_to_children="true"/>

				        <container width="1"/>
						
				<!-- title area -->
				<widget class="text" id="sect" font="title" alignment="left,centre_y" size="20"  multiline="false" auto_size="horizontal" wants_mouse_events="false" dont_give_default_focus="true" colour="secondary">
					<record id="object_property">
						<list id="get_properties">
							<record>
								<integer id="get_property" value="titl" />
								<integer id="set_property" value="text" />
							</record>
							<!--<record>
                    <integer id="get_property" value="ttcl" />
                    <integer id="set_property" value="colr" />
                  </record>-->
						</list>
					</record>
				</widget>

				<!-- description -->
				<widget class="text" id="subs" size="12"  font="label" alignment="left,centre_y" multiline="false" auto_size="horizontal" dont_give_default_focus="true" colour="secondary">
					<record id="object_property">
						<list id="get_properties">
							<record>
								<integer id="get_property" value="subt" />
								<integer id="set_property" value="atxt" />
							</record>
							<record>
								<integer id="get_property" value="subL" />
								<integer id="set_property" value="text" />
							</record>
							<!--<record>
                    <integer id="get_property" value="ttcl" />
                    <integer id="set_property" value="colr" />
                  </record>-->
						</list>
					</record>
				</widget>
			</container>
			
			
			<!-- search icon -->
			<widget class="button" id="srch" appearance="icons/26px/search" dont_give_default_focus="true" red_replacement="secondary" hidden="true" width="30"/>


		</container>


	</container>

</panel>