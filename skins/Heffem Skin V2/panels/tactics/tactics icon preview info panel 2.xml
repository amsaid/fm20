<panel height="70">
	<attachment_group class="vertical_arrange" vertical_alignment="middle"/>

	<container class="inner_box" id="bsic" appearance="boxes/custom/pitch player presentation/paper" height="70">
		<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true"/>

		<container>
			<attachment_group class="horizontal_arrange" horizontal_layout="-1, 60" horizontal_gap="-22"/>

			<!-- name and number -->
			<container>
				<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true"/>

					<container>
						<attachment_group class="vertical_arrange" vertical_offset="6" horizontal_inset="4"/>

						<widget class="person_button" id="pplr" format="[%person#1-shirt]" style="bold" alignment="centre, can_scale" info_popup_enabled="false" person_is_player="true" font="title" size="9" links_enabled_in_popup="false" info_popup_instead_of_link="true" auto_size="vertical" navigation_focus_target="false"/>
    <widget class="label" id="bsnm" size="32" height="35" colour="red" font="shirtnumber" alignment="centre"  />
    
					</container>
			</container>

			<!-- portrait picture -->
			<container>
				<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true"/>

					<widget class="object_portrait_picture" id="pict" scale_picture="true" late_loading="true" image_alignment="right, bottom" clickable="false">
						<record id="object_property">
							<integer id="get_property" value="objt"/>
							<integer id="set_property" value="objt"/>
						</record>
					</widget>
			</container>
		</container>
	</container>
</panel>
