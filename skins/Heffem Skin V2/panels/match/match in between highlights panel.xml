				<record id="object_property">
					<integer id="get_property" value="objt" />
					<integer id="set_property" value="objt" />
				</record>
			</widget>
		</container>

		

   		<container class="horizontal_adaptive_container" offset="0" inset="0" gap="2" default_height="-3" priority="5" mode="distribute_equally">	
